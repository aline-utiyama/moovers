<div class="container">
  <div class="row mover-main-card">
    <% if policy(Mover).show? %>
      <div>
        <div class="mover-info row justify-content-around align-items-center">
          <div class="mover">
            <img class="avatar-xlarge"
              src="https://www.spiritmarine.com.br/wp-content/uploads/2020/02/iconfinder_male_628288.png">
            <h2><%= @mover.user.name %></h2>
          </div>
          <div class="car-img">
            <% if @mover.image.attached? %>
              <%= cl_image_tag @mover.image.key %>
            <% else %>
              <img src="https://www.tciteam.com/wp-content/uploads/2017/04/Secure-Your-Load.jpg" alt="">
            <% end %>
          </div>
        </div>
        <div class="mover-card">
          <p><i class="fas fa-car"></i> Type of car: <%= @mover.type_of_car %> </p>
          <p><i class="fas fa-map-marked-alt"> </i> Location: <%= @mover.address %></p>
          <p><i class="fas fa-yen-sign"> </i> Price: Â¥<%= @mover.price %></p>
          <p><i class="fas fa-info-circle"> </i> Availability: <%= @mover.description %></p>
          <%# map  %>
          <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
          <%# map %>
        </div>
      </div>
      <div>
        <%= render 'bookings/new' %>
      </div>
    </div>
  <% end %>
</div>
</div>